<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.todolistapp.TodoController">

    <TextField fx:id="taskField" promptText="Enter a new task" />
    <Button text="Add Task" onAction="#addTask" />

    <ListView fx:id="taskListView" prefHeight="200" />

    <HBox spacing="10">
        <Button text="Edit" onAction="#editTask" />
        <Button text="Delete" onAction="#deleteTask" />
    </HBox>
</VBox>
